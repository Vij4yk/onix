{
	"extends": [
		"standard",
		"plugin:react/recommended"
	],
	"parser": "babel-eslint",
	"ecmaFeatures": {
		"jsx": true
	},
	"plugins": [
		"babel",
		"react"
	],
	"rules": {
		"indent": [
			"error",
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"semi": ["error", "always"],
		"space-before-function-paren": ["error", "never"],
		"jsx-quotes": ["error", "prefer-double"],
		"react/no-unknown-property": 0,
    "react/display-name": 0
	},
	"globals": {
		"fetch": false
	}
}
